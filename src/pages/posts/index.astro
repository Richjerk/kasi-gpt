---
import { getCollection } from 'astro:content';

const posts = await getCollection('posts');
---

<h1>Blog Posts</h1>
<ul>
  {posts.map(post => (
    <li>
      <a href={`/posts/${post.slug}/`}>
        <h2>{post.data.title}</h2>
        <p>{post.data.description}</p>
        <small>Posted on: {post.data.date.toLocaleDateString()}</small>
      </a>
    </li>
  ))}
</ul>
